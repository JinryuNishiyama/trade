<div class="account-section">
  <h1>新規登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form">
      <%= f.label :name, "名前", class: "form-label" %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br>
      <%= f.email_field :email, autocomplete: "email", class: "form-field" %>
    </div>
    <div class="form">
      <% if @minimum_password_length %>
        <%= f.label :password, "パスワード（#{@minimum_password_length}文字以上）", class: "form-label" %><br>
      <% else %>
        <%= f.label :password, "パスワード", class: "form-label" %><br>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.submit "登録", class: "form-submit" %>
    </div>
  <% end %>
  <div>
    <%= render "users/shared/links" %>
  </div>
</div>
