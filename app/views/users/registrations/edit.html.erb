<div class="account-section">
  <h1>ユーザー情報の編集</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user-edit-form" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="form">
      <%= f.label :name, "名前", class: "form-label" %><br>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.label :icon, "アイコン画像", class: "form-label" %><br>
      <%= f.file_field :icon, class: "form-field" %>
    </div>
    <% if current_user.icon? %>
      <div class="form">
        <%= f.check_box :remove_icon, class: "form-checkbox" %>
        <%= f.label :remove_icon, "アイコン画像をデフォルトに戻す" %>
      </div>
    <% end %>
    <div class="form">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br>
      <%= f.email_field :email, autocomplete: "email", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.label :password, "新しいパスワード", class: "form-label" %><br>
      <i>（変更しない場合は入力しないでください）</i><br>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
      <% if @minimum_password_length %>
        <br>
        <em><%= @minimum_password_length %>文字以上</em>
      <% end %>
    </div>
    <div class="form">
      <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "form-label" %><br>
      <i>（変更しない場合は入力しないでください）</i><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.label :current_password, "現在のパスワード", class: "form-label" %><br>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-field" %>
    </div>
    <div class="form">
      <%= f.submit "更新", class: "form-submit" %>
    </div>
  <% end %>
  <div class="delete-account">
    <h3>アカウント削除</h3>
    <p>アカウントを削除したい場合は、下の「アカウント削除」ボタンをクリックしてください。</p>
    <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "アカウントを削除します、よろしいですか？" }, method: :delete, class: "delete-button" %>
  </div>
</div>
